<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD8D8"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/control_btns"
        android:background="#F4F2F2"
        android:layout_width="match_parent"
        android:paddingVertical="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/video_fragment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/active"
            android:text="@string/video_fragment_btn_label"/>
        <Button
            android:id="@+id/audio_fragment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/non_active"
            android:text="@string/audio_fragment_btn_label" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/control_btns"
        />
</RelativeLayout>



